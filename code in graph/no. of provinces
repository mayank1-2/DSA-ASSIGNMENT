class Solution {
public:
    void dfs( vector<vector<int>>& adj,int node,vector<bool>& visited){
        visited[node]=1;
       for(auto it:adj[node]){
            if(!visited[it]){         //dfs called for vertices that is connected to node or vertex and mark visited
               dfs(adj,it,visited);
            }
        }
    }
    int findCircleNum(vector<vector<int>>& isConnected) {
        int v=isConnected.size();
            vector<vector<int>> adj(v);
           for(int i=0;i<v;i++){ 
           for(int j=0;j<v;j++){ 
            if(isConnected[i][j]==1 && i!=j){
                adj[i].push_back(j);    //first making adjacency list by using adjacney matrix
                adj[j].push_back(i);
            }   
           }
           }
    
        vector<bool> visited(v,0);
        int cnt=0;
        for(int i=0;i<v;i++){
            if(!visited[i]){
                cnt++;       //calling dfs and marking visit for every vertices that is visited
            dfs(adj,i,visited);   in dfs it marks for connected components but if there are some remaining vertices that is not visited that is province
            }
        }
        return cnt;
    }
